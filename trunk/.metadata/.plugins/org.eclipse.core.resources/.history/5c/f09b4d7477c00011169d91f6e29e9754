package Hero;

import java.awt.Image;
import java.awt.Toolkit;
import java.net.URL;

public class LoadImages
{
	static Image[] images;
	static LoadImages instance;
	static boolean imagensCarregadas = false;
	
	static String[] stImages = new String[]{ "/images/Hero/Opening.png" , // 0 - imagem teste Opening
		"/images/Faixa.png", // 1 - imagem teste da faixa
		"/images/AnimationPlayer.png", // 2 - imagem teste da annimação
		"/images/PixelAmarelo.png", // 3 - imagem teste do pixel amarelo
		"/images/PixelVermelho.png", // 4 - imagem teste do pixel vermelho
		"/images/Preto.png", // 5 - imagem teste do pixel vermelho
		"/images/blackpixel.png", // 6 - pixel preto
		"/images/redpixel.png", // 7 - pixel preto
		"/images/Granada.png", // 8 - bomba
		"/images/BarraVermelha.png", // 9 - barra vermelha
		"/images/BarraAmarela.png", // 10 - barra amarela
		"/images/Level01_1.png", // 11 - fase 1 - parte 1
		"/images/iconPlayer.png", // 12 - Incone do player;
		"/images/iconGranada.png", // 13 - Incone do granada;
		"/images/Level01_2.png", // 14 - Level 1 parte 2
		"/images/Refem.png", // 15 - Refem	
		"/images/Level02_1.png", // 16 - Level 2 - parte 1
		"/images/Level02_2.png", // 17 - Level 2 - parte 2
		"/images/Level02_3.png", // 18 - Level 2 - parte 3
		"/images/Level02_4.png", // 19 - Level 2 - parte 4
		"/images/Level03_1.png", // 20 - Level 3 - parte 1
		"/images/Level03_2.png", // 21 - Level 3 - parte 2
		"/images/Level03_3.png", // 22 - Level 3 - parte 3
		"/images/Level03_4.png", // 23 - Level 3 - parte 4
		"/images/Level03_5.png", // 24 - Level 3 - parte 5
		"/images/Level03_6.png", // 25 - Level 3 - parte 6
		"/images/AnimationAranha.png", // 26 - inimigo aranha
		"/images/AnimationBarata.png", // 27 -inimigo barata
		"/images/AnimationMorcego.png", // 28 - inimigo morcego
		"/images/AnimationLampada.png", // 29 - inimigo lampada
		"/images/Plataforma1.png", // 30 - imagem plataforma falsa 1
		"/images/Plataforma2.png", // 31 - imagem plataforma falsa 2
		"/images/Plataforma3.png", // 32 - imagem plataforma falsa 3
		};
	
	public void Load()
	{
		if(LoadImages.imagensCarregadas == false)
		{
			Toolkit tk = Toolkit.getDefaultToolkit();
			
			images = new Image[stImages.length];
			
			for(int i = 0; i< stImages.length; i++)
			{
				System.out.println(i);
				images[i] = tk.getImage(getURL(stImages[i]));
			}
			imagensCarregadas = true;
		}
	}
	private LoadImages(){}
	
	public static LoadImages getInstance()
	{
		if(instance == null)
			instance = new LoadImages();
		
		return instance;
	}
	private static URL getURL(String filename)
	{
		URL url = null;
		try
		{
			url = LoadImages.getInstance().getClass().getResource(filename);
		}
		catch (Exception e) { }
		return url;
	}
	public static Image getImage(int index)
	{
		return images[index];
	}
	
}
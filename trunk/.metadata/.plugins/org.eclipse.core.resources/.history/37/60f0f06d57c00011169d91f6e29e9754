package Hero;

import game.Scene;

import java.awt.Graphics2D;

public class Congratulations extends Scene 
{
	float time;

	public Congratulations()
	{
		//Audios.getInstance().Play(3);
		//new SoundClip(3, 0);
	}

	public void update()
	{
		time += Game.loopTime;
		System.out.println("time" + time);
		
		if(time >= 2)
		{
			SceneManager.changeScene(3);
		}
	}
	public void draw(Graphics2D g2d)
	{
		g2d.drawImage(LoadImages.getImage(3), 0, 0, null);
		
	}

}

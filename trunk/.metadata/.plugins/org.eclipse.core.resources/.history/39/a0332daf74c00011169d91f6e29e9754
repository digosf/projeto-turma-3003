package Hero;

import game.Scene;

import java.util.Random;

public class SceneManagerHR
{
    static public SCENE currentScene;
    static Random rand = new Random();

	
	static public Scene changeScene(int currentScene)
	{
		Scene scene;
		switch (currentScene)
		{			
			case 0:
				SceneManagerHR.currentScene = SCENE.SCN_GAMEOVER;
				scene = new Congratulations();
				break;
			case 1:
				SceneManagerHR.currentScene = SCENE.SCN_LEVEL_01;
				scene = new Level_01();
				break;
			case 2:
				SceneManagerHR.currentScene = SCENE.SCN_LEVEL_02;
				scene = new Level_02();
				break;
			case 3:
				SceneManagerHR.currentScene = SCENE.SCN_LEVEL_03;
				scene = new Level_03();
				break;
			case 4:
				SceneManagerHR.currentScene = SCENE.SCN_GAMEOVER;
				scene = new GameOver();
				break;

			case 5:
				SceneManagerHR.currentScene = SCENE.SCN_GAMEOVER;
				scene = new Congratulations();
				break;
			case 6:
				SceneManagerHR.currentScene = SCENE.SCN_OPENING;
				scene = new Opening();
				break;
		}
		return scene;
	}
	
	public static enum SCENE
	{
		SCN_OPENING,
		SCN_LEVEL_01,
		SCN_LEVEL_02,
		SCN_LEVEL_03,
		SCN_GAMEOVER,
		SCN_CONGRATULATIONS,
	}
}
